<apex:page controller="makePaymentController">
    <apex:param name="recordId" value="{!$CurrentPage.parameters.recordId}" />

    <!-- Utiliza SLDS para mejorar el diseño -->
    <apex:facet name="style">
        <style>
            body {
                font-family: "Salesforce Sans", Arial, sans-serif;
                background-color: #f4f6f9;
                padding: 20px;
            }
            .header-table {
                margin-bottom: 20px;
                width: 100%;
            }
            .slds-table {
                margin-top: 20px;
                border-collapse: collapse;
                width: 100%;
            }
            .slds-table th, .slds-table td {
                padding: 12px 16px; /* Aumentar el padding para que sea más grande */
                text-align: center;
                font-size: 16px; /* Tamaño de texto más grande */
            }
            .slds-table th {
                background-color: #f3f6f9;
                font-weight: bold;
            }
            .slds-button {
                margin-top: 20px;
                padding: 10px 20px;
            }
            .title {
                font-size: 2rem;
                font-weight: bold;
                color: #0070d2;
            }
            .table-header {
                background-color: #f3f6f9;
            }
            .detail-section {
                margin-bottom: 40px;
            }
            .table-container {
                overflow-x: auto; /* Esto permitirá ver la tabla completa si hay muchos datos */
            }
        </style>
    </apex:facet>

    <body>
        <!-- HEADER: Company Info -->
        <div class="detail-section">
            <table class="slds-table slds-table_bordered">
                <tr>
                    <td colspan="2" style="text-align: center; padding: 20px;">
                        <h1 class="title">Atlas Car {!Concesionario.Name}</h1>
                    </td>
                </tr>
                <tr>
                    <td style="width: 55%; text-align: center;">
                        <apex:image width="1.45in" url="{!$Resource.Logo2}" style="padding: 20px;" />
                    </td>
                    <td style="text-align: center;">
                        <table class="slds-table slds-table_bordered">
                            <thead>
                                <tr>
                                    <th colspan="2" class="slds-text-align_center slds-text-title_caps slds-size_1-of-1">
                                        <h2>Detalles</h2>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><b>Concesionario:</b></td>
                                    <td>{!Concesionario.Name}</td>
                                </tr>
                                <tr>
                                    <td><b>Cuenta:</b></td>
                                    <td>{!Account.Name}</td>
                                </tr>
                                <tr>
                                    <td><b>Precio Total:</b></td>
                                    <td>{!Opportunity.Precio_total__c}</td>
                                </tr>
                                <tr>
                                    <td><b>Contacto:</b></td>
                                    <td>{!Contact.Name}</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
        </div>

        <!-- SECTION: Términos de Uso -->
        <div class="detail-section">
            <h3 class="title">Términos de Uso</h3>
            <table class="slds-table slds-table_bordered slds-text-align_center">
                <thead>
                    <tr class="table-header">
                        <th>Vehículo</th>
                        <th>Fecha de Entrega</th>
                        <th>Fecha de Salida</th>
                        <th>Total de días</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    <apex:repeat value="{!TerminosDeUso}" var="termino">
                        <tr>
                            <td>{!termino.Vehiculo__r.Name}</td>
                            <td>{!TEXT(DAY(termino.Fecha_entrega__c))}-{!TEXT(MONTH(termino.Fecha_entrega__c))}-{!TEXT(YEAR(termino.Fecha_entrega__c))}</td>
                            <td>{!TEXT(DAY(termino.Fecha_salida__c))}-{!TEXT(MONTH(termino.Fecha_salida__c))}-{!TEXT(YEAR(termino.Fecha_salida__c))}</td>
                            <td>{!TEXT(termino.Fecha_entrega__c - termino.Fecha_salida__c)}</td>
                            <td>{!termino.Precio_total__c}</td>
                        </tr>
                    </apex:repeat>
                    <tr>
                        <th>Total</th>
                        <td colspan="3"></td>
                        <td><b>{!Opportunity.Precio_total__c}</b></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- FORMULARIO PARA EL BOTÓN -->
        <div style="text-align: center;">
            <apex:form>
                <apex:commandButton value="Procesar Pago" action="{!procesarPago}" styleClass="slds-button slds-button_neutral" />
            </apex:form>
        </div>
    </body>
</apex:page>
